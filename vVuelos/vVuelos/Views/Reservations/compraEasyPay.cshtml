@model vVuelos.Models.flight


@{
    ViewBag.Title = "Pago con EasyPay";
}

<div class="container">
    <div class="row">
        <h2>Comprar con EasyPay</h2>
    </div>
    <hr />
    <div class="row">
        <h4><i>Detalles del tiquete</i></h4>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <label>Destino:</label>
                <label id="destino">@Html.DisplayFor(model => model.city.name)</label>
            </div>
            <div class="row">
                <label>Fecha:</label>
                <label id="arrival_date">@Html.DisplayFor(model => model.arrival_date)</label>
            </div>
            <div class="row">
                <label>Hora:</label>
                <label id="arrival_time">@Html.DisplayFor(model => model.arrival_time)</label>
            </div>
            <div class="row">
                <label>Aerolínea:</label>
                <label id="airline">@Html.DisplayFor(model => model.airline.name)</label>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <h4><i>Ingrese su información EasyPay</i></h4>
    </div>
    <div class="row">
        <div class="form-horizontal">
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label col-md-2">Número de cuenta Easy Pay:</label>
                    <input class="controls" type="text" name="numeroEasyPay" id="txtNumeroEasyPay">
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Código de Seguridad:</label>
                    <input class="controls" type="password" name="codigoSeguridad" id="txtCodigoSeguridad">
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Contraseña:</label>
                    <input class="controls" type="password" name="password" id="txtPassword">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <p>Total a pagar <span id="total" class="mark text-primary">$600</span></p>
    </div>
    <div class="row">
        <input class="btn btn-success" type="submit" id="btnComprar" onClick="alert('Se realizó la compra del boleto')" value="Pagar">
        <a href="@Url.Action("Departures", "flights")" class="btn btn-danger">Cancelar</a>
    </div>
</div>

<script src="~/Scripts/js/UserValidations.js" type="text/javascript"></script>