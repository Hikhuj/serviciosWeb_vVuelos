@model IEnumerable<vVuelos.Models.flight>

@{
    ViewBag.Title = "Arrivals";
}

<h2>Arrivals</h2>
<input type="text" id="searchBox" onkeyup="searchFlight()" placeholder="Buscar vuelos" class="form-control">

<table class="table" id="flightsTable">
    <tr>
        <th>
            ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.arrival_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.arrival_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.airline.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.airport_gates.consecutive_airport_gate_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city.name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayNameFor(modelItem => modelItem.consecutive_flight_id)</td>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrival_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrival_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.airline.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.airport_gates.consecutive_airport_gate_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city.name)
            </td>
        </tr>
    }

    <script src="~/Scripts/js/Flights.js" type="text/javascript"></script>