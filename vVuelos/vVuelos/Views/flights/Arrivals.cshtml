@model IEnumerable<vVuelos.Models.flight>

@{
    ViewBag.Title = "Arrivals";
}

<h2>Llegadas</h2>
<hr />
<div class="container">
    <div class="row">
        <input type="text" id="searchBox" onkeyup="searchFlight()" placeholder="Buscar vuelos" class="form-control">
    </div>
    <div class="row">
        <table class="table table-hover bg-light" id="flightsTable">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="h5">Vuelo</th>
                    <th scope="col" class="h5">Aerolínea</th>
                    <th scope="col" class="h5">Procedencia</th>
                    <th scope="col" class="h5">Fecha</th>
                    <th scope="col" class="h5">Hora</th>
                    <th scope="col" class="h5">Estado</th>
                    <th scope="col" class="h5">Puerta</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td class="h6">@Html.DisplayFor(modelItem => item.code)</td>
                        <td class="h6">@Html.DisplayFor(modelItem => item.airline.name)</td>
                        <td class="h6">@Html.DisplayFor(modelItem => item.city.name)</td>
                        <td class="h6">@Html.DisplayFor(modelItem => item.arrival_date)</td>
                        <td class="h6">@Html.DisplayFor(modelItem => item.arrival_time)</td>
                        <td class="h6">@Html.DisplayFor(modelItem => item.status)</td>
                        <td class="h6">@Html.DisplayFor(modelItem => item.airport_gates.consecutive_airport_gate_id)</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>

<script src="~/Scripts/js/Flights.js" type="text/javascript"></script>