@model IEnumerable<vVuelos.Models.flight>

@{
    ViewBag.Title = "Departures";
}

<h2>Departures</h2>
<input type="text" id="searchBox" onkeyup="searchFlight()" placeholder="Buscar vuelos" class="form-control">
<table class="table" id="flightsTable">
    <tr>
        <th>
            VUELO
        </th>
        <th>
            Aerolinea
        </th>
        <th>
            Procedencia
        </th>
        <th>
            FECHA
        </th>
        <th>
            HORA
        </th>
        <th>
            ESTADO
        </th>
        <th>
            PUERTA
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.airline.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrival_date.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrival_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.airport_gates.consecutive_airport_gate_id)
            </td>
            <td>
                @Html.ActionLink("Comprar","Compra","Reservations",null,new {id=item.consecutive_flight_id}) | 
                @Html.ActionLink("Reservar","Create","Reservations")
            </td>
        </tr>
    }
</table>

<script src="~/Scripts/js/Flights.js" type="text/javascript"></script>
