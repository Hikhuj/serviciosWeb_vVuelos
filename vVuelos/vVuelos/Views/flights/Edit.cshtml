@model vVuelos.Models.flight

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>flight</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.consecutive_flight_id)

    <div class="form-group">
        <label class = "control-label col-md-2">Codigo</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.code, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Aerolinea</label>
        <div class="col-md-10">
            @Html.DropDownList("consecutive_airline_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.consecutive_airline_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ciudad</label>
        <div class="col-md-10">
            @Html.DropDownList("city_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.city_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Fecha</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.arrival_date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.arrival_date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Hora</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.arrival_time, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.arrival_time, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Puerta</label>
        <div class="col-md-10">
            @Html.DropDownList("consecutive_airport_gate_id_FK", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.consecutive_airport_gate_id_FK, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Estado</label>
        <div class="col-md-10">
            <div class="col-md-10">
                @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">En vuelo?</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.onflight)
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
