@model IEnumerable<vVuelos.Models.flight>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Codigo
        </th>
        <th>
            Fecha
        </th>
        <th>
            Hora
        </th>
        <th>
            Estado
        </th>
        <th>
            Aerolinea
        </th>
        <th>
            Puerta
        </th>
        <th>
            Destino - Proveniencia
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.consecutive_flight_id)</td>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.arrival_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.arrival_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.airline.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.airport_gates.consecutive_airport_gate_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.consecutive_flight_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.consecutive_flight_id })
        </td>
    </tr>
}

</table>
