@model IEnumerable<vVuelos.Models.airline>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Nombre
        </th>
        <th>
            Imagen
        </th>
        <th>
            Estado
        </th>
        <th>
            Pais de HQ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.consecutive_airline_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            <img src="@Url.Content(item.image)" width="128" height="60" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.country.name1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.consecutive_airline_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.consecutive_airline_id }) 
        </td>
    </tr>
}

</table>
