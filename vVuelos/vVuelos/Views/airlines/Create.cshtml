@model vVuelos.Models.airline

@{
    ViewBag.Title = "Create";
}

<h2>Agregar aerolinea</h2>


@using (Html.BeginForm("Create", "airlines", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Nombre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Pais de origen</label>
            <div class="col-md-10">
                @Html.DropDownList("consecutive_country_id_FK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.consecutive_country_id_FK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Imagen</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control", @type="file" } })
                @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Estado de vuelo</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.status)
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <input type="button" value="Borrar" class="btn btn-warning" onclick="limpiarData()" />
                <input type="button" value="Cancelar" class="btn btn-danger" onclick="document.location='../Index'" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/js/ValidacionesAdm.js" type="text/javascript">
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
