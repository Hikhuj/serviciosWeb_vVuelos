@model vVuelos.Models.user

@{ ViewBag.Title = "Ingresar";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
<script src="~/Scripts/floatingMenu.js"></script>
