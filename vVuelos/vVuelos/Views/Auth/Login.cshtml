<center>
    <section class="form-register">
        <div class="row">
            <br />
            @using (Html.BeginForm("Login", "Auth", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "form-signin" }))
            {
                <!-- Form Header -->
                <h2 class="form-signin-heading">Iniciar sesión</h2>
                <br />

                <!-- Form Username -->
                @Html.TextBoxFor(m => m.username, new { @class = "form-control", name = "username", placeHolder = "Usuario", autofocus = "" })
                <br />

                <!-- Form Password -->
                @Html.PasswordFor(m => m.new_password, new { @class = "form-control", name = "password", placeHolder = "Contraseña", autofocus = "" })
                <br />
                
                <!-- Form Button - Iniciar -->
                <button class="buttons" type="submit" id="btnCrearUsuario">Iniciar</button>

                <!-- Form Button - Registrarse -->
                <button class="buttons">
                    @Html.ActionLink("Registrarse", "Register", "User", null, new { @style = "color:White; text-decoration:none" })
                </button>
    
                <!-- Form Button - Validation -->
                if (@ViewBag.error != null)
                {
                    <br />
                    <br />
                    <br />
                    <div id="alert-login-message" class="alert alert-danger col-sm-offset-4 col-sm-4">
                        @ViewBag.error
                    </div>
                    <br />
                }

            }

        </div>
    </section>
</center>