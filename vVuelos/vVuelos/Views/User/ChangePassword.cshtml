@model vVuelos.Models.user
@{
    ViewBag.Title = "ChangePassword";
}
<br />
<br />
@using (Html.BeginForm("ChangePassword","User",FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Actualizar contraseña</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class = "control-label col-md-2">Contraseña actual</label>
        <div class="col-md-10">
            @Html.PasswordFor(model => model.old_password, new { @class = "form-control", name = "old_password", placeHolder = "Contraseña actual", autofocus = "" })
            @Html.ValidationMessageFor(model => model.old_password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Nueva contraseña </label>
        <div class="col-md-10">
            @Html.PasswordFor(model => model.new_password, new { @class = "form-control", name = "new_password", placeHolder = "Nueva contraseña", autofocus = "" })
            @Html.ValidationMessageFor(model => model.new_password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Confirmacion</label>
        <div class="col-md-10">
            @Html.Password("confirmacion",null, new { @class = "form-control", name = "confirmacion", placeHolder = "Confirmacion de Contraseña", autofocus = "" })
            @Html.ValidationMessageFor(model => model.new_password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change" class="btn btn-default" />
            <button class="btn btn-danger" type="button" onclick="document.location='Profile'">Cancelar</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Cancelar", "Profile")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
