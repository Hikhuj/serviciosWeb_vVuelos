@model vVuelos.Models.user

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Detalles de usuario</h2>
<hr />

<div class="container">
    <div class="row">
        <dl class="dl-horizontal">
            <dt>ID:</dt>
            <dd>@Html.DisplayFor(model => model.id)</dd>
            
            <dt>Usuario:</dt>
            <dd>@Html.DisplayFor(model => model.username)</dd>

            <dt>Correo Electrónico:</dt>
            <dd>@Html.DisplayFor(model => model.email)</dd>

            <dt>Nombre:</dt>
            <dd>@Html.DisplayFor(model => model.first_name)</dd>

            <dt>Segundo Nombre:</dt>
            <dd>@Html.DisplayFor(model => model.middle_name)</dd>

            <dt>Apellido:</dt>
            <dd>@Html.DisplayFor(model => model.last_name)</dd>

            <dt>Segundo Apellido:</dt>
            <dd>@Html.DisplayFor(model => model.second_last_name)</dd>

            <dt>País:</dt>
            <dd>@Html.DisplayFor(model => model.country.name1)</dd>

            <dt>Rol:</dt>
            <dd>@Html.DisplayFor(model => model.role.name)</dd>
        </dl>
    </div>
    <div class="row">
        @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
        <a href="@Url.Action("Index", "User")" class="btn btn-default">Volver a la Lista</a>
    </div>
</div>
